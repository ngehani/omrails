<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Sign up</h1>
  </div>
   <div class="panel-body">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>     
        <%#= f.input :first_name %>
        <%#= f.input :last_name %>
        <%# - how do I show the concatenation of first_name and last_name here %>
        <%#= f.input :name, class: "form-control" %>
        <%#= f.input :email, placeholder: 'user@domain.com', autofocus: true %>
        <%#= f.input :password, placeholder: 'hint: no special characters' %>
        <%#= f.input :password_confirmation, placeholder: 're-type your password' %>
  
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, placeholder: 'user@domain.com', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, placeholder: 'hint: no special characters', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, placeholder: 're-type your password', class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
    
    <% end %>
  </div>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>
